<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXButton?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="450.0">

    <GridPane alignment="CENTER" vgap="25" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="30"
              AnchorPane.rightAnchor="30" AnchorPane.topAnchor="100">

        <HBox GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="CENTER">
            <Label text="cveProducto:       "/>
            <JFXTextField fx:id="txtFcve" text="" alignment="CENTER" focusColor="dodgerblue"/>
        </HBox>

        <HBox GridPane.rowIndex="1" GridPane.columnIndex="0" alignment="CENTER">
            <Label text="nombreProd:      "/>
            <JFXTextField fx:id="prod" text="" alignment="CENTER" focusColor="dodgerblue"/>
        </HBox>

        <HBox GridPane.rowIndex="2" GridPane.columnIndex="0" alignment="CENTER">
            <Label text="precio:      "/>
            <JFXTextField fx:id="txtFprecio" text="" alignment="CENTER" focusColor="dodgerblue"/>
        </HBox>

        <HBox GridPane.rowIndex="3" GridPane.columnIndex="0" alignment="CENTER">
            <Label text="cveTipo:      "/>
            <JFXTextField fx:id="txtFtipo" text="" alignment="CENTER" focusColor="dodgerblue"/>
        </HBox>

        <HBox GridPane.rowIndex="4" GridPane.columnIndex="0" alignment="CENTER">
            <Label text="cvePromo:      "/>
            <JFXTextField fx:id="txtFpromo" text="" alignment="CENTER" focusColor="dodgerblue"/>
        </HBox>

        <HBox GridPane.rowIndex="5" GridPane.columnIndex="0" alignment="CENTER">
            <Label text="cveProveedor:      "/>
            <JFXTextField fx:id="txtFprov" text="" alignment="CENTER" focusColor="dodgerblue"/>
        </HBox>

        <HBox GridPane.rowIndex="9" GridPane.columnIndex="0" alignment="CENTER">
            <JFXButton fx:id="save" text="Guardar" buttonType="FLAT" textFill="green"
                       textAlignment="CENTER" style="-fx-background-color: inherit"/>

            <JFXButton fx:id="cancel" text="Cancelar" buttonType="FLAT" textFill="red"
                       textAlignment="CENTER" style="-fx-background-color: inherit"/>
        </HBox>
    </GridPane>

</AnchorPane>
